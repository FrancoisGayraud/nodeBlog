<% include partials/header.ejs %>
        <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-warning" style="margin-top: 5vh"><%= message %></p>
        <% } %>
        <form class="add-post-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label style="color: white" for="title">Title</label>
                    <input style="color: white" type="text" class="form-control bg-dark" name="title" id="title" required>
                </div>
                <div class="form-group col-md-12">
                    <label style="color: white" for="content">Content</label>
                    <textarea style="color: white" class="form-control rounded-0 bg-dark" id="content" name="content" rows="10"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Publish</button>
        </form>
    </div>
</div>
</body>
</html>
